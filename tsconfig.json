{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "noImplicitAny": true,
    "outDir": ".",
    "target": "esnext",
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*",
    "rollup.config.ts",
  ],
  "exclude": ["node_modules"],
}